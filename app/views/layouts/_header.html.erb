<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "a-realtor", "#", id: "logo", class: "brand" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path, class: "navbar-link" %></li>
          <li><%= link_to "Help", help_path, class: "navbar-link" %></li>
          <% if signed_in? %>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                <li><%= link_to "Profile", user_path(current_user) %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path,class: "navbar-link" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
  <h1 class="label"><%= yield(:title) %></h1>
</header>
